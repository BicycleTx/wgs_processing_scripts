#!/usr/bin/env bash

source metadata_functions

run_dir=$1 && shift
sample_id=$(load_tumor_sample_from_metadata ${run_dir})

rm ${run_dir}/linx/${sample_id}.linx.fusion.tsv
mv ${run_dir}/linx/${sample_id}.linx.fusion_original.tsv ${run_dir}/linx/${sample_id}.linx.fusion.tsv

rm ${run_dir}/linx/${sample_id}.linx.breakend.tsv
mv ${run_dir}/linx/${sample_id}.linx.breakend_original.tsv ${run_dir}/linx/${sample_id}.linx.breakend.tsv
