#!/usr/bin/env bash

source locate_files

month=$1

reporting_db_tsv=$(locate_reporting_db_tsv)

header=$(head -n 1 ${reporting_db_tsv})
cat ${reporting_db_tsv} | grep ${month}-2019 > "/data/lims/montly_overview_reporting_db/19_${month}_overview_tmp.tsv"

reporting_db_tsv="/data/lims/montly_overview_reporting_db/19_${month}_overview_tmp.tsv"

echo ${header} | tr " " \\t > "/data/lims/montly_overview_reporting_db/19_${month}_overview.tsv"
cat ${reporting_db_tsv} | awk '{print $1, $2, $3, $4, $5 /100, $6, $7}' | tr " " \\t >> "/data/lims/montly_overview_reporting_db/19_${month}_overview.tsv"

rm "/data/lims/montly_overview_reporting_db/19_${month}_overview_tmp.tsv"
