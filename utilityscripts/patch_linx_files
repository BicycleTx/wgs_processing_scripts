#!/usr/bin/env bash

source metadata_functions

run_dir=$1 && shift
sample_id=$(load_tumor_sample_from_metadata ${run_dir})

cp ${run_dir}/linx/WIDE01011202T.linx.fusion.tsv ${run_dir}/linx/${sample_id}.linx.fusion_original.tsv
sed -i "s/likelihood/Likelihood/" ${run_dir}/linx/WIDE01011202T.linx.fusion.tsv

cp ${run_dir}/linx/WIDE01011202T.linx.breakend.tsv  ${run_dir}/linx/${sample_id}.linx.breakend_original.tsv
sed -i "s/id/Id/" ${run_dir}/linx/WIDE01011202T.linx.breakend.tsv