## versions
RTG = v3.7
GATK = v3.4-46
NIST truth = v3.2.2

## prepare vcf
VCF=input.filtered_variants
rtg bgzip ${VCF}.vcf
rtg index -f vcf ${VCF}.vcf.gz

## select SNPs (do same for INDELs)
java -jar GenomeAnalysisTK.jar
-T SelectVariants
-R Homo_sapiens.GRCh37.GATK.illumina.fasta
--selectTypeToInclude SNP
--variant ${VCF}.vcf.gz
--out ${VCF}_SNP.vcf.gz

## get precision and sensitivity
rtg vcfeval
--evaluation-regions NA12878_GIAB_highconf_IllFB-IllGATKHC-CG-Ion-Solid_ALLCHROM_v3.2.2_highconf.bed
-t ${SDF_DIR}
-o ${OUT_DIR}
-b NA12878_GIAB_highconf_IllFB-IllGATKHC-CG-Ion-Solid_ALLCHROM_v3.2.2_highconf_SNPS.vcf.gz
-c ${VCF}_SNP.vcf.gz
