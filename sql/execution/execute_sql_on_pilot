#!/usr/bin/env bash

source message_functions || exit 1

sql_file_or_select_statement=$1 && shift

database_name="hmfpatients_pilot"
credentials=$( gcloud secrets versions access "latest" --secret=mysql-patients-sql-prod-1-reader --project=hmf-secrets )

do_execute_sql_on_database "${sql_file_or_select_statement}" "${database_name}" "${credentials}"
