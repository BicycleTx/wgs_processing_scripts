#!/usr/bin/env bash

source message_functions || exit 1

iclusion_importer_jar=${HOME}/hmf/repos/hmftools/iclusion-importer/target/iclusion-importer-*-jar-with-dependencies.jar

if [ ! -f ${iclusion_importer_jar} ]; then
    error "Could not locate iclusion importer jar!"
fi

info "Copying ${iclusion_importer_jar} to gs://common-tools/"
gsutil cp ${iclusion_importer_jar} gs://common-tools/iclusion-importer/pilot/iclusion-importer.jar

info "Copying ${iclusion_importer_jar} to serve-vm"
gcloud compute scp ${patient_db_jar} serve-vm:/data/tools/iclusion-importer/pilot/iclusion-importer.jar