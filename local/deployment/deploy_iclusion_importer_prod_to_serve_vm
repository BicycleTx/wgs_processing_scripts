#!/usr/bin/env bash

source message_functions || exit 1

version=1.4
iclusion_importer_jar=${HOME}/hmf/repos/hmftools/iclusion-importer/target/iclusion-importer-${version}-jar-with-dependencies.jar

if [ ! -f ${iclusion_importer_jar} ]; then
    error "Could not locate iclusion importer jar!"
fi

info "Copying ${iclusion_importer_jar} to gs://common-tools/"
gsutil cp ${iclusion_importer_jar} gs://common-tools/iclusion-importer/${version}/iclusion-importer.jar

info "Copying ${iclusion_importer_jar} to serve-vm-prod-1"
gcloud compute scp ${iclusion_importer_jar} serve-vm-prod-1:/data/tools/iclusion-importer/${version}/iclusion-importer.jar