#!/usr/bin/env bash

source message_functions || exit 1

sample=$1

if [[ -z ${sample} ]]; then
    error "No sample name provided"
fi

run_id=$( hmf_api_get "reports/created" | jq '.[] | select(.sample_name == "'${sample}'") | .run_id' | tail -1 )
set_name=$( hmf_api_get 'runs/'${run_id}'' | jq -r '.set | .name' )

gcloud compute ssh --zone "europe-west4-a" "ops-vm-prod-2"  --tunnel-through-iap --project "hmf-ops" --command "mkdir temp;  gsutil cp gs://patient-reporter-final-prod-1/${sample}*.pdf ~/temp; gsutil cp gs://diagnostic-pipeline-output-prod-1/${set_name}/orange/${sample}*.orange.pdf ~/temp"

echo "Do you want to copy the final OncoAct report? y or n"
read answer_report
if [[ ${answer_report} == "y" ]]; then
    gcloud compute scp --project="hmf-ops" --zone="europe-west4-a" --recurse "ops-vm-prod-2":~/temp/${sample}*report.pdf ~/hmf/tmp/
fi

echo "Do you want to copy the ORANGE report? y or n"
read answer_orange
if [[ ${answer_orange} == "y" ]]; then
    gcloud compute scp --project="hmf-ops" --zone="europe-west4-a" --recurse "ops-vm-prod-2":~/temp/${sample}*orange.pdf ~/hmf/tmp/
fi

gcloud compute ssh --zone "europe-west4-a" "ops-vm-prod-2"  --tunnel-through-iap --project "hmf-ops" --command "rm -r ~/temp/ 2>&1"


