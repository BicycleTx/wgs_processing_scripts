#!/usr/bin/env bash

source message_functions || exit 1

version=3.63
patient_db_jar=${HOME}/hmf/repos/hmftools/patient-db/target/patient-db-${version}-jar-with-dependencies.jar

if [ ! -f ${patient_db_jar} ]; then
    error "Could not locate patient db jar!"
fi

info "Copying ${patient_db_jar} to gs://common-tools/"
gsutil cp ${patient_db_jar} gs://common-tools/patient-db/${version}/patient-db.jar

info "Copying ${patient_db_jar} to data-vm-prod-2"
gcloud compute scp ${patient_db_jar} data-vm-prod-2:/data/tools/patient-db/${version}/patient-db.jar