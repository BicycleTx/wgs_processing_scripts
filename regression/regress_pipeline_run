#!/bin/bash

run=$1
truthrun=$2

refsample=$3
tumorsample=$4
out=$5

refbam=${refsample}/mapping/${refsample}_dedup.realigned.bam
diff ${run}/${refbam} ${truthrun}/${refbam} > ${out}/refsamplediff

tumorbam=${tumorsample}/mapping/${tumorsample}_dedup.realigned.bam
diff ${run}/${tumorsample} ${truthrun}/${tumorsample} > ${out}/tumorsamplediff

#/data/common/tools/tabix_v0.2.6/bgzip -c GIAB_SOMATIC-MIX.filtered_variants_snpEff_snpSift_Cosmicv76_GoNLv5.vcf > GIAB_SOMATIC-MIX.filtered_variants_snpEff_snpSift_Cosmicv76_GoNLv5.vcf.gz

grep -v "#” ${run}/somaticVariants/${refsample}_${tumorsample}/${refsample}_${tumorsample}_merged_somatics_snpEff_dbSNP_Cosmicv76_melted.vcf > ${out}/${run}_filtered_somatics.vcf
grep -v "#” ${truthrun}/somaticVariants/${refsample}_${tumorsample}/${refsample}_${tumorsample}_merged_somatics_snpEff_dbSNP_Cosmicv76_melted.vcf > ${out}/${run}_filtered_somatics.vcf



