    local reporting_db_tsv=/data/ops/lims/prod/reporting_db.tsv
    if [[ ! -f "${reporting_db_tsv}" ]]; then
        echo "[ERROR] Unable to locate reporting db TSV. Exiting." >&2
        exit 1
    fi
    echo ${reporting_db_tsv}
}

