################################### PGX ####################################

locate_pgx_dir() {
    echo "${base_path}/repos/scripts/pgx/"
}

locate_pgx_venv_dir() {
    echo "$(locate_pgx_resource_dir)/venv/pgx"
}

locate_pgx_requirements() {
    echo "$(locate_pgx_dir)/requirements.txt"
}

locate_pgx_pilot_calls() {
    local run_dir=$1
    local pgx_dir=${run_dir}/pgx_pilot

    local pgx_calls_txt=""

    if [[ -d "${pgx_dir}" ]]; then
        pgx_calls_txt=$(find -L ${pgx_dir} -type f -name "*_calls.txt")
    fi

    if [[ -z "${pgx_calls_txt}" ]]; then
        echo "[ERROR] Unable to locate pilot pgx calls in ${run_dir}. Exiting." >&2
        exit 1
    fi

    echo ${pgx_calls_txt}
}

locate_pgx_pilot_genotype() {
    local run_dir=$1
    local pgx_dir=${run_dir}/pgx_pilot

    local pgx_genotype_txt=""

    if [[ -d "${pgx_dir}" ]]; then
        pgx_genotype_txt=$(find -L ${pgx_dir} -type f -name "*_genotype.txt")
    fi

    if [[ -z "${pgx_genotype_txt}" ]]; then
        echo "[ERROR] Unable to locate pgx genotype pilot in ${run_dir}. Exiting." >&2
        exit 1
    fi

    echo ${pgx_genotype_txt}
}

locate_pgx_pilot_vcf() {
    local run_dir=$1
    local pgx_dir=${run_dir}/pgx_pilot

    local pgx_vcf=""

    if [[ -d "${pgx_dir}" ]]; then
        pgx_vcf=$(find -L ${pgx_dir} -type f -name "*_PGx.vcf")
    fi

    if [[ -z "${pgx_vcf}" ]]; then
        echo "[ERROR] Unable to locate pgx VCF pilot in ${run_dir}. Exiting." >&2
        exit 1
    fi

    echo ${pgx_vcf}
}

