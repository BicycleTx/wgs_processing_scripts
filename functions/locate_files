######################################## LINX ########################################

locate_linx_fusions() {
    local run_dir=$1
    local linx_dir=${run_dir}/linx
    if [[ ! -d "${linx_dir}" ]]; then
        echo "[ERROR] Unable to locate linx dir for fusions: ${linx_dir}. Exiting" >&2
        exit 1
    fi

    local fusion_tsv=$(find -L ${linx_dir}/ -type f -name "*.linx.fusion.tsv")
    if [[ -z "${fusion_tsv}" ]]; then
        echo "[ERROR] Unable to locate linx fusions tsv in ${run_dir}. Exiting." >&2
        exit 1
    fi
    echo ${fusion_tsv}
}

locate_linx_breakends() {
    local run_dir=$1
    local linx_dir=${run_dir}/linx
    if [[ ! -d "${linx_dir}" ]]; then
        echo "[ERROR] Unable to locate linx dir for disruptions: ${linx_dir}. Exiting" >&2
        exit 1
    fi

    local disruption_tsv=$(find -L ${linx_dir}/ -type f -name "*.linx.breakend.tsv")
    if [[ -z "${disruption_tsv}" ]]; then
        echo "[ERROR] Unable to locate linx disruptions tsv in ${run_dir}. Exiting." >&2
        exit 1
    fi
    echo ${disruption_tsv}
}

locate_linx_viral_insertions() {
    local run_dir=$1
    local linx_dir=${run_dir}/linx
    if [[ ! -d "${linx_dir}" ]]; then
        echo "[ERROR] Unable to locate linx dir for viral insertions: ${linx_dir}. Exiting" >&2
        exit 1
    fi

    local viral_insertion_tsv=$(find -L ${linx_dir}/ -type f -name "*.linx.viral_inserts.tsv")
    if [[ -z "${viral_insertion_tsv}" ]]; then
        echo "[ERROR] Unable to locate viral insertion tsv in ${run_dir}. Exiting." >&2
        exit 1
    fi
    echo ${viral_insertion_tsv}
}

locate_linx_driver_catalog() {
    local run_dir=$1
    local linx_dir=${run_dir}/linx
    if [[ ! -d "${linx_dir}" ]]; then
        echo "[ERROR] Unable to locate linx dir for drivers: ${linx_dir}. Exiting" >&2
        exit 1
    fi

    local driver_catalog_tsv=$(find -L ${linx_dir}/ -type f -name "*.driver.catalog.tsv")
    if [[ -z "${driver_catalog_tsv}" ]]; then
        driver_catalog_tsv=$(locate_purple_drivers_somatic ${run_dir})
        if [[ -z "${driver_catalog_tsv}" ]]; then
            echo "[ERROR] Unable to locate either linx drivers catalog tsv or purple driver catalog tsv in ${run_dir}. Exiting." >&2
            exit 1
        fi
    fi
    echo ${driver_catalog_tsv}
}

########################################### GATK ##########################################

locate_germline_variants() {
    local run_dir=$1 && shift
    local ref_sample=$1 && shift

    local germline_vcf=""

    if [[ -f "${run_dir}/pipeline.version" ]]; then
        # >v5 format
        germline_vcf=$(find -L ${run_dir}/${ref_sample}/germline_caller/ -type f -name "*.germline.vcf.gz")
    else
        # <v5 format
        germline_vcf=$(find -L ${run_dir}/ -type f -name "*.annotated.vcf.gz")
    fi

    if [[ -z "${germline_vcf}" ]]; then
        echo "[ERROR] Unable to locate germline VCF in ${run_dir}. Exiting." >&2
        exit 1
    fi

    echo ${germline_vcf}
}


########################################### Bachelor ##########################################

locate_reportable_bachelor_variants() {
    local run_dir=$1
    local reportable_bachelor_tsv=$(find -L ${run_dir}/bachelor/ -type f -name "*.reportable_germline_variant.tsv")
    if [[ -z "${reportable_bachelor_tsv}" ]]; then
        # The germline_variant_tsv will only be found for bachelor v1.10+. Since we cannot rerun bachelor on datastore,
        # we just blank out bachelor results for every pre-v1.10 bachelor run.
        echo "[WARN] Cannot find bachelor v1.10+ output. Assuming bachelor has not found any variants for ${run_dir}!" >&2
        reportable_bachelor_tsv=/data/common/dbs/bachelor/empty.reportable_germline_variant.tsv
    fi
    echo ${reportable_bachelor_tsv}
}


############################################# SAGE ###########################################

locate_sage_germline_variants_pilot() {
    local run_dir=$1
    local sage_germline_variants_vcf=$(find -L ${run_dir}/sage_germline/ -type f -name "*.sage.germline.filtered.vcf.gz")
    if [[ -z "${sage_germline_variants_vcf}" ]]; then
        echo "[ERROR] Unable to locate SAGE germline variants in ${run_dir}. Exiting." >&2
        exit 1
    fi
    echo ${sage_germline_variants_vcf}
}

