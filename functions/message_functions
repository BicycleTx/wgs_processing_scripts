#!/usr/bin/env bash

msg() {
    local msg_type=$1 && shift
    local msg_content=$* && shift
    echo "[${msg_type}] $(date +'%y%m%d %T') - ${msg_content}"
}

error() {
    msg "ERROR" "$@" >&2
    exit 1
}

die() {
    msg "ERROR" "$@" >&2
    exit 1
}

debug() {
    msg "DEBUG" "$@" >&2
}

warn() {
    msg "WARN" "$@" >&2
}

info() {
    msg "INFO" "$@"
}

info_and_warn() {
    msg "INFO" "$@"
    msg "WARN" "$@" >&2
}

