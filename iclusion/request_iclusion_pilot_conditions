#!/usr/bin/env bash

url=$1 && shift
username=$1 && shift
password=$1 && shift
countEntries=$1 && shift

curl \
-X POST ${url}'/graphql' \
-H 'Accept: application/json' \
-H 'Authorization: Bearer '$( curl -X POST '"'${url}'"/authentication_token' -H 'Content-Type: application/json' -d '{"username": "'${username}'","password": "'${password}'" }' | jq -r .token )'' \
-H 'Content-Type: application/json' \
d '{"query":"query conditions ($first: Int!){conditions(first: $first) {totalCount pageInfo {endCursor hasNextPage}edges {node {id negated study{id} mutationOrBiomarker{id} variant{id} logicType{slug}}}}}","variables":{"first":"'${countEntries}'"}}' | jq .