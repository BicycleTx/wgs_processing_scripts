#!/usr/bin/env bash

url=$1 && shift
username=$1 && shift
password=$1 && shift
countEntries=$1 && shift

curl \
-X POST ${url}'/graphql' \
-H 'Accept: application/json' \
-H 'Authorization: Bearer '$( curl -X POST ''${url}'/authentication_token' -H 'Content-Type: application/json' -d '{"username": "'${username}'","password": "'${password}'" }' | jq -r .token )'' \
-H 'Content-Type: application/json' \
-d '{"query":"query studies ($first: Int!){studies(first: $first) {totalCount pageInfo {endCursor hasNextPage}edges {node {id ccmoId ccmoBeId eudra dossierNumber registryDate completionDate child adult elderly studyType{studyType phase1 phase2 phase3 phase4}researchAreas{edges{node{id researchAreaType}}}indications{edges{node{id}}}variants{edges{node{id}}}links{edges{node{id}}}institutes{edges{node{id}}}translations{edges{node{locale publicTitle acronym scientificTitle url briefSummary inclusionCriteria exclusionCriteria summaryResults primaryOutcomes interventions purpose background burden design population}}}countriesOfRecruitment{edges{node{id countryCode}}}}}}}","variables":{"first":"'${countEntries}'"}}' | jq .