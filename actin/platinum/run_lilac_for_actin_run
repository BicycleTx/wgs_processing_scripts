#!/usr/bin/env bash

source locate_files || exit 1
source metadata_functions || exit 1
source message_functions || exit 1

run_dir=$1 && shift

if [[ -z "${run_dir}" ]]; then
    error "Parameters missing. Exiting"
fi

tumor_sample=$(load_tumor_sample_from_metadata ${run_dir})
reference_sample=$(load_ref_sample_from_metadata ${run_dir})

reference_dna_hla_bam="$(locate_actin_lilac_hla_bam_dir)/${tumor_sample}/${reference_sample}.hla.bam"
tumor_dna_hla_bam="$(locate_actin_lilac_hla_bam_dir)/${tumor_sample}/${tumor_sample}.hla.bam"

if [[ ! -f ${reference_dna_hla_bam} || ! -f ${tumor_dna_hla_bam} ]]; then
    warn "DNA HLA BAMs could not be found for ${tumor_sample}. Skipping LILAC"
    exit 0
fi

rna_hla_bam=""
rna_bam_dir=$(locate_rna_bam_directory ${run_dir})
if [[ -d "${rna_bam_dir}" ]]; then
    rna_hla_bam=$(locate_rna_hla_bam ${run_dir})
fi

info "Running LILAC for ${tumor_sample}"

run_lilac_prod ${run_dir} ${reference_dna_hla_bam} ${tumor_dna_hla_bam} ${rna_hla_bam}
