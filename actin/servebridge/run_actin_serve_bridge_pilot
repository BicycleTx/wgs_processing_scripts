#!/usr/bin/env bash

source locate_files || exit 1

treatment_database_directory="$(locate_actin_treatment_database_directory)"
output_serve_knowledgebase_tsv="/data/resources/custom/actin/serve_bridge/actin_knowledgebase.tsv"

actin_jar="$(locate_pilot_actin)"

java -cp ${actin_jar} com.hartwig.actin.serve.ServeBridgeApplication \
    -treatment_database_directory ${treatment_database_directory} \
    -output_serve_knowledgebase_tsv ${output_serve_knowledgebase_tsv} \
    "$@"

