#!/usr/bin/env bash

source message_functions || exit 1
source locate_files || exit 1

actin_jar=$1 && shift
output_directory=$1 && shift

if [[ -z "${actin_jar}" || -z "${output_directory}" ]]; then
    error "Parameters missing. Exiting."
fi

feed_directory="$(locate_actin_clinical_feed_directory)"
curation_directory="$(locate_actin_clinical_curation_directory)"

java -cp ${actin_jar} com.hartwig.actin.clinical.ClinicalIngestionApplication \
    -feed_directory ${feed_directory} \
    -curation_directory ${curation_directory} \
    -output_directory ${output_directory} \
    "$@"
