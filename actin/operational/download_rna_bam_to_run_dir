#!/usr/bin/env bash

source locate_files || exit 1
source metadata_functions || exit 1
source message_functions || exit 1

run_dir=$1 && shift

if [[ -z "${run_dir}" ]]; then
    error "Parameters missing. Exiting."
fi

tumor_sample=$(load_tumor_sample_from_metadata ${run_dir})

rna_analysis_bucket=$(locate_rna_analysis_bucket ${tumor_sample})
if [[ ! -z ${rna_analysis_bucket} ]]; then
    info "Downloading RNA bam to ${run_dir}/rna_bam"
    gsutil -m cp -r gs://hmf-rna-analysis/samples/${tumor_sample}/${tumor_sample}.sorted.dups.bam* ${run_dir}/
else
    warn "Could not locate RNA analysis bucket for ${tumor_sample}. RNA pipeline not run yet?"
fi
