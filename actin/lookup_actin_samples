#!/usr/bin/env bash

source message_functions || exit 1

actin_submission="HMFregACTN"

info "Querying LIMS regarding ACTIN samples"
query_lims.pl -type samples -filter "submission=${actin_submission}" | grep -v ^##
echo ""

info "Querying API regarding ACTIN samples"
api samples "${actin_submission}" submission
echo ""

info "Querying API regarding ACTIN runs"
api runs "${actin_submission}" submission
echo ""