#!/usr/bin/env bash

source locate_files || exit 1

treatment_config_dir="$(locate_actin_treatment_config_directory)"
output_directory="$(locate_actin_treatment_directory)"

actin_jar="$(locate_pilot_actin)"

java11 -cp ${actin_jar} com.hartwig.actin.treatment.TreatmentCreatorApplication \
    -treatment_config_dir ${treatment_config_dir} \
    -output_directory ${output_directory} \
    "$@"

