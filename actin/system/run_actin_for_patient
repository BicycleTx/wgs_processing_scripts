#!/usr/bin/env bash

source message_functions || exit 1
source metadata_functions || exit 1

patient=$1 && shift

if [[ -z "${patient}" ]]; then
    error "Parameters missing. Exiting.";
fi

sample=$(load_tumor_sample_from_metadata ${patient})

actin_orange_interpreter_pilot ${sample}
load_actin_molecular_pilot ${sample}

echo ""

actin_treatment_matcher_pilot ${patient}

echo ""

create_actin_evaluation_data_for_patient ${patient}

echo ""

actin_reporter_pilot ${patient}

echo ""

load_actin_treatment_match_pilot ${patient}