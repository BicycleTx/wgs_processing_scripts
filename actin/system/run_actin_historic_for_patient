#!/usr/bin/env bash

source message_functions || exit 1

patient=$1 && shift
sample_postfix=$1 && shift

if [[ -z "${patient}" ]]; then
    error "Parameters missing. Exiting.";
fi

if [[ -z "${sample_postfix}" ]]; then
    sample_postfix="T"
fi

echo "Running ACTIN in historic mode"

actin_treatment_matcher_pilot ${patient} ${sample_postfix} -run_historically

echo ""

load_actin_treatment_match_pilot ${patient}