#!/usr/bin/env bash

source message_functions || exit 1
source locate_files || exit 1

patient=$1

if [[ -z "${patient}" ]]; then
    error "Missing parameters. Exiting."
fi

if [[ ! -d ~/hmf/tmp/orange_germline ]]; then
    mkdir ~/hmf/tmp/orange_germline
fi

gcloud compute scp data-vm-prod-1:$(locate_actin_molecular_directory)/*${patient}*/orange/*.pdf ~/hmf/tmp/orange_germline/