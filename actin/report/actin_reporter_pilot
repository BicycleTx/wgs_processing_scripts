#!/usr/bin/env bash

source locate_files || exit 1
source message_functions || exit 1

sample=$1 && shift

if [[ -z "${sample}" ]]; then
    error "Parameters missing. Exiting.";
fi

clinical_json="$(locate_actin_clinical_json ${sample})"

molecular_dir="$(locate_actin_molecular_directory)/${sample}"
molecular_json="$(locate_orange_json ${molecular_dir})"

if [[ -z "${molecular_json}" ]]; then
    molecular_json="$(locate_actin_minimal_molecular_json)"
fi

output_directory="$(locate_actin_reports_directory)"

actin_jar="$(locate_pilot_actin)"

java11 -cp ${actin_jar} com.hartwig.actin.report.ReporterApplication \
    -clinical_json ${clinical_json} \
    -molecular_json ${molecular_json} \
    -output_directory ${output_directory} \
    "$@"

