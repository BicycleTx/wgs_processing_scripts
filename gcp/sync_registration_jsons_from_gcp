#!/usr/bin/env bash

source message_functions || exit 1

set -e

BUCKET="gs://registration-resources-prod-1"

info "Syncing sample sheets, registered JSONs and logs from GCP"
gcloud auth activate-service-account --key-file /data/common/dbs/gcp_credentials/hmf-ops
gsutil -m rsync ${BUCKET}/jsons_and_logs/jsons/registered/ /data/ops/api/prod/jsons/registered/
gsutil -m rsync ${BUCKET}/jsons_and_logs/logs/ /data/ops/api/prod/logs/
gsutil -m rsync ${BUCKET}/samplesheets /data/samplesheets
info "Sample sheets, registered JSONs and logs synchronised"
