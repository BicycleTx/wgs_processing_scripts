#!/bin/bash

knowledgebase_importer_jar=/data/common/tools/knowledgebase_importer_v1.0/knowledgebase-importer.jar

ref_genome=/data/common/refgenomes/Homo_sapiens.GRCh37.GATK.illumina/Homo_sapiens.GRCh37.GATK.illumina.fasta
cgi_biomarkers_file=/data/common/dbs/knowledgebases/input/cgi_biomarkers_per_variant.tsv
cgi_validated_file=/data/common/dbs/knowledgebases/input/cgi_catalog_of_validated_oncogenic_mutations.tsv
onco_annotated_file=/data/common/dbs/knowledgebases/input/onco_allAnnotatedVariants.csv
onco_actionable_file=/data/common/dbs/knowledgebases/input/onco_allActionableVariants.txt
doid_file=/data/common/dbs/knowledgebases/input/doid.owl
cosmic_fusions_file=/data/common/dbs/knowledgebases/input/cosmic_gene_fusions.csv
civic_evidence_file=/data/common/dbs/knowledgebases/input/civic_01-Mar-2018-ClinicalEvidenceSummaries.tsv
civic_variants_file=/data/common/dbs/knowledgebases/input/civic_01-Mar-2018-VariantSummaries.tsv
transvar_command=transvar
treatment_type_mapping_file=/data/common/dbs/knowledgebases/output/treatmentTypes.tsv
output_dir=/data/common/dbs/knowledgebases/output

db_credentials=/data/common/dbs/mysql_credentials/pilot
db_user=$(awk '/^user/ {print $2}' ${db_credentials})
db_pass=$(awk '/^pass/ {print $2}' ${db_credentials})
ensembl_db=$(cat /data/common/dbs/mysql_credentials/ensembl_db_local | head -n 1)

java -Dorg.jooq.no-logo=true -jar ${knowledgebase_importer_jar} \
    -reference ${ref_genome} \
    -transvar_location ${transvar_command} \
    -doid_owl_location ${doid_file} \
    -onco_annotated_location ${onco_annotated_file} \
    -onco_actionable_location ${onco_actionable_file} \
    -cgi_validated_location ${cgi_validated_file} \
    -cgi_biomarkers_location ${cgi_biomarkers_file} \
    -treatment_type_mapping_location ${treatment_type_mapping_file} \
    -civic_variants_location ${civic_variants_file} \
    -civic_evidence_location ${civic_evidence_file} \
    -cosmic_fusions_location ${cosmic_fusions_file} \
    -ensembl_db ${ensembl_db} \
    -db_user ${db_user} \
    -db_password ${db_pass} \
    -output_dir ${output_dir}
