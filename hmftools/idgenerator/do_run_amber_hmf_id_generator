#!/usr/bin/env bash

id_generator_jar=$1 && shift
credentials=$1 && shift

sample_hashes=/data/common/dbs/idgenerator/hashes/sample_hashes.csv
password=$(cat /data/common/dbs/idgenerator/credentials/anonimisation_pwd)

# Database details
db_user=$(awk '/^user/ {print $2}' ${credentials})
db_pass=$(awk '/^pass/ {print $2}' ${credentials})
db_url=$(awk '/^url/ {print $2}' ${credentials})

java -jar ${id_generator_jar} \
    -password ${password} \
    -in "${sample_hashes}" \
    -out "${sample_hashes}" \
    -db_user ${db_user} -db_pass ${db_pass} -db_url ${db_url}