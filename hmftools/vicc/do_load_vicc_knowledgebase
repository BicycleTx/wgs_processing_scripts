#!/usr/bin/env bash

source message_functions || exit 1

vicc_json=$1 && shift
vicc_db=$1 && shift
vicc_jar=$1 && shift

# Database details
credentials=$( gcloud secrets versions access "latest" --secret=mysql-patients-sql-prod-1-writer --project=hmf-secrets )

db_user=$( echo ${credentials} | sed 's/ /\n/g' | grep user= | cut -d"=" -f2 | sed 's/"//g' )
db_pass=$( echo ${credentials} | sed 's/ /\n/g' | grep password= | cut -d"=" -f2  | sed 's/"//g' )
db_host=$( echo ${credentials} | sed 's/ /\n/g' | grep host= | cut -d"=" -f2 | sed 's/"//g' )
db_port=$( echo ${credentials} | sed 's/ /\n/g' | grep port= | cut -d"=" -f2 | sed 's/"//g' )
db_url=$("mysql://${db_host}:${db_port}/${vicc_db}?serverTimezone=CET")

info "Loading vicc into SQL into ${db_url}"

# To recreate the database
# mysql ${vicc_db} --host="${db_host} --user=${db_user} --password=${db_pass} < ~/create_vicc_database.sql

java -Xmx8G -Dorg.jooq.no-logo=true -cp ${vicc_jar} com.hartwig.hmftools.vicc.ViccJsonSQLImporter \
    -vicc_json ${vicc_json} \
    -db_user ${db_user} -db_pass ${db_pass} -db_url ${db_url} \
    "$@"
