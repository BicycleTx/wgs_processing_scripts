#!/bin/bash

fields=BASELINE.ELIGIBILITY.ELIGIBILITY.REGDTC
fields=$fields,BASELINE.DEMOGRAPHY.DEMOGRAPHY.SEX
fields=$fields,BASELINE.DEMOGRAPHY.DEMOGRAPHY.ETHNIC
fields=$fields,BASELINE.SELCRIT.SELCRIT.NHOSPITAL
fields=$fields,BASELINE.SELCRIT.SELCRIT.NBIRTHYEAR
fields=$fields,BASELINE.ELIGIBILITY.ELIGIBILITY.BIRTHYEAR
fields=$fields,BASELINE.ELIGIBILITY.ELIGIBILITY.BIRTHDTCES
fields=$fields,BASELINE.ELIGIBILITY.ELIGIBILITY.HOSPITAL
fields=$fields,BASELINE.CARCINOMA.CARCINOMA.PTUMLOC
fields=$fields,ENDSTUDY.DEATH.DEATH.DDEATHDTC
fields=$fields,BIOPSY.BIOPS.BIOPSIES.BIOPTDT
fields=$fields,BIOPSY.BIOPS.BIOPSIES.BILESSITE
fields=$fields,AFTERBIOPT.TRTAFTER.TRTAFTER.SYSTEMICST
fields=$fields,AFTERBIOPT.TRTAFTER.TRTAFTER.SYSREGPOST
fields=$fields,AFTERBIOPT.TRTAFTER.TRTAFTER.SYSSTDT
fields=$fields,AFTERBIOPT.TRTAFTER.TRTAFTER.SYSENDT
fields=$fields,TREATMENT.TUMORMEASUREMENT.MEASUREMENT.ASSDTC
fields=$fields,TREATMENT.TUMORMEASUREMENT.TUMORMEASUREMENT.TMYN
fields=$fields,TREATMENT.TUMORMEASUREMENT.TUMORMEASUREMENT.RESPONSEDTC
fields=$fields,TREATMENT.TUMORMEASUREMENT.TUMORMEASUREMENT.BESTRESPON

exec java -Xmx3200m -Xms800m -jar /data/common/tools/ecrfanalyser_v1.0/ecrf-analyser.jar -csv_out ~/tmp/ecrf_dump_for_patients.csv -patient_as_row -ecrf /data/ecrf/cpct_ecrf.xml -fields ${fields} -patients "$@"