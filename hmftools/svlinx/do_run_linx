#!/usr/bin/env bash

source locate_files
source metadata_functions

run_dir=$1 && shift
credentials=$1 && shift
linx_jar=$1 && shift
output_dir=$1 && shift

# Database details
db_user=$(awk '/^user/ {print $2}' ${credentials})
db_pass=$(awk '/^pass/ {print $2}' ${credentials})
db_url=$(awk '/^url/ {print $2}' ${credentials})

# Load meta data
sample=$(load_tumor_sample_from_metadata ${run_dir})

# reference files
viral_hosts_csv=/data/common/dbs/sv/viral_host_ref.csv
known_fusion_data=/data/common/dbs/fusions/known_fusion_data.csv
# driver_gene_panel=$(locate_driver_gene_panel_tsv)
gene_transcripts_dir=/data/common/dbs/ensembl_data_cache
fragile_sites=/data/common/dbs/sv/fragile_sites_hmf.csv
line_elements=/data/common/dbs/sv/line_elements.csv
replication_origins=/data/common/dbs/sv/heli_rep_origins.bed

if [[ -d "${output_dir}" ]]; then
    linx_files=$(find ${output_dir} -type f -name "*linx*")
    if [[ ! -z "${linx_files}" ]]; then
        rm ${output_dir}/*linx*
    fi
else
    mkdir -p ${output_dir}
fi

java -Xmx8G -Xms4G -jar ${linx_jar} \
    -sample ${sample} \
    -output_dir ${output_dir} \
    -db_user ${db_user} -db_pass ${db_pass} -db_url ${db_url} \
    -fragile_site_file ${fragile_sites} \
    -line_element_file ${line_elements} \
    -replication_origins_file ${replication_origins} \
    -viral_hosts_file ${viral_hosts_csv} \
    -gene_transcripts_dir ${gene_transcripts_dir} \
    -check_fusions \
    -known_fusion_file ${known_fusion_data} \
    -chaining_sv_limit 0 \
    -check_drivers \
    "$@"

# -driver_gene_panel ${driver_gene_panel} \