#!/usr/bin/env bash

source locate_files

ckb_dir=$(locate_ckb_flex_data_dir)

output_dir=/data/common/dbs/serve/pilot_output_ckb_only

if [[ -d "${output_dir}" ]]; then
    if [[ "$(ls -A ${output_dir})" ]]; then
        echo "[INFO] Output dir '${output_dir}' exists and will be cleaned!"
        rm -r ${output_dir}/*
    fi
else
    mkdir -p ${output_dir}
    echo "[INFO] Output dir created: ${output_dir}!"
fi

do_run_serve_pilot -use_ckb -ckb_dir ${ckb_dir} -output_dir ${output_dir} "$@"