#!/usr/bin/env bash

source message_functions || exit 1

prod_dir=/data/common/dbs/serve/prod_output
old_prod_dir=/data/common/dbs/serve/prod_output_old

info "Verfiy actionable charateristics v37"
diff ${old_prod_dir}/ActionableCharacteristics.37.tsv ${prod_dir}/ActionableCharacteristics.37.tsv

info "Verfiy actionable fusions v37"
diff ${old_prod_dir}/ActionableFusions.37.tsv ${prod_dir}/ActionableFusions.37.tsv

info "Verfiy actionable genes v37"
diff ${old_prod_dir}/ActionableGenes.37.tsv ${prod_dir}/ActionableGenes.37.tsv

info "Verfiy actionable hotspots v37"
diff ${old_prod_dir}/ActionableHotspots.37.tsv ${prod_dir}/ActionableHotspots.37.tsv

info "Verfiy actionable ranges v37"
diff ${old_prod_dir}/ActionableRanges.37.tsv ${prod_dir}/ActionableRanges.37.tsv

info "Verfiy known codons v37"
diff ${old_prod_dir}/KnownCodons.SERVE.37.tsv ${prod_dir}/KnownCodons.SERVE.37.tsv

info "Verfiy known copy numbers v37"
diff ${old_prod_dir}/KnownCopyNumbers.SERVE.37.tsv ${prod_dir}/KnownCopyNumbers.SERVE.37.tsv

info "Verfiy known exons v37"
diff ${old_prod_dir}/KnownExons.SERVE.37.tsv ${prod_dir}/KnownExons.SERVE.37.tsv

info "Verfiy known fusion pairs v37"
diff ${old_prod_dir}/KnownFusionPairs.SERVE.37.tsv ${prod_dir}/KnownFusionPairs.SERVE.37.tsv

info "Verfiy known hotspots v37"
zdiff ${old_prod_dir}/KnownHotspots.SERVE.37.vcf.gz ${prod_dir}/KnownHotspots.SERVE.37.vcf.gz

info "Verfiy actionable charateristics v38"
diff ${old_prod_dir}/ActionableCharacteristics.38.tsv ${prod_dir}/ActionableCharacteristics.38.tsv

info "Verfiy actionable fusions v38"
diff ${old_prod_dir}/ActionableFusions.38.tsv ${prod_dir}/ActionableFusions.38.tsv

info "Verfiy actionable genes v38"
diff ${old_prod_dir}/ActionableGenes.38.tsv ${prod_dir}/ActionableGenes.38.tsv

info "Verfiy actionable hotspots v38"
diff ${old_prod_dir}/ActionableHotspots.38.tsv ${prod_dir}/ActionableHotspots.38.tsv

info "Verfiy actionable ranges v38"
diff ${old_prod_dir}/ActionableRanges.38.tsv ${prod_dir}/ActionableRanges.38.tsv

info "Verfiy known codons v38"
diff ${old_prod_dir}/KnownCodons.SERVE.38.tsv ${prod_dir}/KnownCodons.SERVE.38.tsv

info "Verfiy known copy numbers v38"
diff ${old_prod_dir}/KnownCopyNumbers.SERVE.38.tsv ${prod_dir}/KnownCopyNumbers.SERVE.38.tsv

info "Verfiy known exons v38"
diff ${old_prod_dir}/KnownExons.SERVE.38.tsv ${prod_dir}/KnownExons.SERVE.38.tsv

info "Verfiy known fusion pairs v38"
diff ${old_prod_dir}/KnownFusionPairs.SERVE.38.tsv ${prod_dir}/KnownFusionPairs.SERVE.38.tsv

info "Verfiy known hotspots v38"
zdiff ${old_prod_dir}/KnownHotspots.SERVE.38.vcf.gz ${prod_dir}/KnownHotspots.SERVE.38.vcf.gz