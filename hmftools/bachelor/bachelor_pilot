#!/usr/bin/env bash
source locate_files

prefix=`dirname $(readlink $0 || echo $0)`

run_dir=$1 && shift
bachelor_output_dir=bachelor_pilot
bachelor_config=/data/common/dbs/bachelor/bachelor_hmf.xml

credentials=$(locate_pilot_database_credentials)
bachelor_jar=/data/common/tools/bachelor_pilot/bachelor.jar

${prefix}/do_run_bachelor ${run_dir} ${bachelor_output_dir} ${bachelor_config} ${credentials} ${bachelor_jar} $@

