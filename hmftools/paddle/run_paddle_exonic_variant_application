#!/usr/bin/env bash

output_dir=$1 && shift

if [[ -z "${output_dir}" ]]; then
    echo "[ERROR] No output dir provided. Exiting" && exit 1;
fi

paddle_jar=/data/common/tools/paddle_pilot/paddle.jar

echo "[INFO] Running paddle exoniic variant application with output dir '${output_dir}'"

java -cp ${paddle_jar} com.hartwig.hmftools.paddle.PaddleExonicVariantsApplication  \
    -output_dir ${output_dir}
