#!/usr/bin/env bash

source locate_files || exit 1
source metadata_functions || exit 1
source lims_functions || exit 1
source message_functions || exit 1
source api_functions || exit 1

tumor_sample=$1 && shift
output_dir_report=$1 && shift
patient_reporter_jar=$1 && shift
# output_dir_report=/data/tmp/210907_david_DEV-2140_anonymyzation-patientreporter/
# patient_reporter_jar=/data/tmp/210907_david_DEV-2140_anonymyzation-patientreporter/patient-reporter-7.24-jar-with-dependencies.jar

primary_tumor_tsv=/data/dbs/clinical_data/curated_primary_tumor.tsv
lims_dir=/data/ops/lims/prod

rva_logo=/data/dbs/patient_reporter_images/L633_l_testlaboratoria_rva_en_color.jpeg
company_logo=/data/dbs/patient_reporter_images/hartwig_logo.jpg
signature=/data/dbs/patient_reporter_images/signature_edwin_transparant.png

if [[ -z "${tumor_sample}" ]]; then
    error "No run dir provided. Exiting";
fi

ref_sample=$(imply_ref_sample_from_tumor_sample "${tumor_sample}")
ref_sample_barcode=$(find_ref_barcode_for_sample_name "${tumor_sample}")
tumor_sample_barcode=$(find_barcode_for_sample_name "${tumor_sample}")

if [[ -z "${ref_sample}"  || -z "${ref_sample_barcode}" \
          || -z "${tumor_sample}" || -z "${tumor_sample_barcode}" ]]; then
    warn "Incomplete information for reporter. Exiting"
    warn "  ref sample name: ${ref_sample}"
    warn "  ref sample barcode: ${ref_sample_barcode}"
    warn "  tumor sample name: ${tumor_sample}"
    warn "  tumor sample barcode: ${tumor_sample_barcode}"
    exit 1;
fi

expected_pipeline_version="5.22"

mkdir --parents "${output_dir_report}/insufficient_dna/data/"
java -jar "${patient_reporter_jar}" \
    -primary_tumor_tsv ${primary_tumor_tsv} \
    -lims_dir ${lims_dir} \
    -rva_logo ${rva_logo} \
    -company_logo ${company_logo} \
    -signature ${signature} \
    -expected_pipeline_version ${expected_pipeline_version} \
    -override_pipeline_version \
    -output_dir_report "${output_dir_report}/insufficient_dna/" \
    -output_dir_data "${output_dir_report}/insufficient_dna/data/" \
    -qc_fail \
    -qc_fail_reason "insufficient_dna" \
    -tumor_sample_id "${tumor_sample}" \
    -tumor_sample_barcode "${tumor_sample_barcode}" \
    -ref_genome_version 37 \
    -log_debug \
    "$@"

mkdir --parents "${output_dir_report}/insufficient_tcp_shallow_wgs/data/"
java -jar "${patient_reporter_jar}" \
    -primary_tumor_tsv ${primary_tumor_tsv} \
    -lims_dir ${lims_dir} \
    -rva_logo ${rva_logo} \
    -company_logo ${company_logo} \
    -signature ${signature} \
    -expected_pipeline_version ${expected_pipeline_version} \
    -override_pipeline_version \
    -output_dir_report "${output_dir_report}/insufficient_tcp_shallow_wgs/" \
    -output_dir_data "${output_dir_report}/insufficient_tcp_shallow_wgs/data/" \
    -qc_fail \
    -qc_fail_reason "insufficient_tcp_shallow_wgs" \
    -ref_sample_id "${ref_sample}" \
    -ref_sample_barcode "${ref_sample_barcode}" \
    -tumor_sample_id "${tumor_sample}" \
    -tumor_sample_barcode "${tumor_sample_barcode}" \
    -ref_genome_version 37 \
    -log_debug \
    "$@"

mkdir --parents "${output_dir_report}/technical_failure/data/"
java -jar "${patient_reporter_jar}" \
    -primary_tumor_tsv ${primary_tumor_tsv} \
    -lims_dir ${lims_dir} \
    -rva_logo ${rva_logo} \
    -company_logo ${company_logo} \
    -signature ${signature} \
    -expected_pipeline_version ${expected_pipeline_version} \
    -override_pipeline_version \
    -output_dir_report "${output_dir_report}/technical_failure/" \
    -output_dir_data "${output_dir_report}/technical_failure/data/" \
    -qc_fail \
    -qc_fail_reason "technical_failure" \
    -tumor_sample_id "${tumor_sample}" \
    -tumor_sample_barcode "${tumor_sample_barcode}" \
    -ref_genome_version 37 \
    -log_debug \
    "$@"