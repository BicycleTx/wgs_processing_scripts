#!/usr/bin/env bash

source message_functions || exit 1

run_dir=$1 && shift
comments=$1 && shift

if [[ -z "${run_dir}" ]]; then
    error "No run dir provided. Exiting"
fi

if [[ -z "${comments}" ]]; then
    error "No comments provided. Exiting"
fi

create_patient_report_for_run_v7_22 ${run_dir} -comments "${comments}" -corrected_report "$@"