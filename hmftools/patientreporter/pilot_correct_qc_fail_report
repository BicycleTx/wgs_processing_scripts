#!/usr/bin/env bash

tumor_sample=$1 && shift
report=$1 && shift
comments=$1 && shift

if [[ -z "${tumor_sample}" ]]; then
    echo "[ERROR] No tumor sample provided. Exiting" && exit 1;
fi

if [[ -z "${report}" ]]; then
    echo "[ERROR] No which qc fail report is provided. Exiting" && exit 1;
fi

if [[ -z "${comments}" ]]; then
    echo "[ERROR] No comments provided. Exiting" && exit 1;
fi

interpret_comments="This is a pilot patient report and is not meant for production purpose. ${comments}"
echo "${comments}"
echo "${interpret_comments}"

if [[ ${report} == "dna" ]]; then
    pilot_dna_yield_insufficient_report ${tumor_sample} -comments "${interpret_comments}" -corrected_report "$@"
elif [[ ${report} == "tissue" ]]; then
    pilot_insufficient_tissue_report ${tumor_sample} -comments "${interpret_comments}" -corrected_report "$@"
elif [[ ${report} == "post" ]]; then
    pilot_post_analysis_fail_report ${tumor_sample} -comments "${interpret_comments}" -corrected_report "$@"
elif [[ ${report} == "low_tumor" ]]; then
    pilot_tumor_molecular_percentage_low_report ${tumor_sample} -comments "${interpret_comments}" -corrected_report "$@"
elif [[ ${report} == "below_detection" ]]; then
    pilot_below_detection_threshold_report ${tumor_sample} -comments "${interpret_comments}" -corrected_report "$@"
elif [[ ${report} == "lab_failure" ]]; then
    pilot_lab_failure_report ${tumor_sample} -comments "${interpret_comments}" -corrected_report "$@"
fi
