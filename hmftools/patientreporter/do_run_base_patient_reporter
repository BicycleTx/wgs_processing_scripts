#!/bin/sh

patient_reporter_dir=/data/common/tools/patientreporter_v1.0

cpct_ecrf=/data/ecrf/cpct_ecrf.xml
lims_csv=/data/lims/lims_data.csv
report_logo="$patient_reporter_dir"/images/hartwig_logo.jpg
report_dir=/data/cpct/patient_reports

exec java -Xmx16G -Xms4G -jar "$patient_reporter_dir"/patient-reporter.jar -cpct_ecrf "$cpct_ecrf" -lims_csv "$lims_csv" -report_logo "$report_logo" -report_dir "$report_dir" "$@"