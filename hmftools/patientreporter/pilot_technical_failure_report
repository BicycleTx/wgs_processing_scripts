#!/usr/bin/env bash

tumor_sample=$1 && shift

if [[ -z "${tumor_sample}" ]]; then
    echo "[ERROR] No tumor sample provided. Exiting" && exit 1;
fi

comments="This is a pilot patient report and is not meant for production purpose."
output_dir_data_report=/data/cpct/qc_fail_reports_data

pilot_do_run_qc_fail_patient_reporter ${tumor_sample} "technical_failure" -output_dir_data_report ${output_dir_data_report}-comments "${comments}" "$@"
