#!/usr/bin/env bash

source locate_files || exit 1
source message_functions || exit 1

run_dir=$1 && shift

if [[ -z "${run_dir}" ]]; then
    error "No run dir provided. Exiting"
fi

serve_actionability_dir=/data/common/dbs/serve/prod_output_ckb_based

output_dir=${run_dir}/protect_pilot_ckb
protect_jar=/data/common/tools/protect_pilot/protect.jar

do_run_protect_pilot_datastore ${run_dir} ${output_dir} ${serve_actionability_dir} ${protect_jar} -log_debug
