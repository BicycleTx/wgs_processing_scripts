#!/usr/bin/env bash

source locate_files

run_dir=$1 && shift

if [[ -z "${run_dir}" ]]; then
    echo "[ERROR] No run dir provided. Exiting" && exit 1;
fi

output_dir=${run_dir}/protect_pilot
protect_jar=$(locate_prod_protect)
serve_actionability_dir=/data/common/dbs/serve/pilot_output

do_run_protect ${run_dir} ${output_dir} ${protect_jar} ${serve_actionability_dir}
