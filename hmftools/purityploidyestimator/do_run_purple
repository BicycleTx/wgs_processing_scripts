#!/usr/bin/env bash

source locate_files
source metadata_functions

run_dir=$1 && shift
purple_jar=$1 && shift
somatic_vcf=$1 && shift
structural_vcf=$1 && shift
sv_recovery_vcf=$1 && shift
purple_output_dir=$1 && shift
credentials=$1 && shift

reference_sample=$(load_ref_sample_from_metadata ${run_dir})
tumor_sample=$(load_tumor_sample_from_metadata ${run_dir})
amber_dir=$(locate_amber_directory ${run_dir})

if [[ ! -d "${amber_dir}" ]]; then
    echo "[ERROR] Unable to locate AMBER data. Exiting."
    exit 1
fi

if [[ ! -f "${somatic_vcf}" ]]; then
    echo "[ERROR] Unable to locate somatic variants. Exiting."
    exit 1
fi

if [[ ! -f "${structural_vcf}" ]]; then
    echo "[ERROR] Unable to locate structural variants. Exiting."
    exit 1
fi

if [[ ! -f "${sv_recovery_vcf}" ]]; then
    echo "[ERROR] Unable to locate sv recovery variants. Exiting."
    exit 1
fi

if [[ -d "${purple_output_dir}" ]]; then
    rm -r "${purple_output_dir}"/*
else
    mkdir -p "${purple_output_dir}"
    if [[ $? = 1 ]]; then
        echo "[ERROR] Could not create directory ${purple_output_dir}. Exiting."
        exit 1
    fi
fi

base_path="/data/common"
if [[ -z "$(hostname | grep datastore)" ]]; then
    # Common folder does not exist on crunches...
    base_path="/data"
fi

gc_profile=${base_path}/dbs/gc/GC_profile.1000bp.cnp
ref_genome=$(locate_ref_genome_37_fasta_file)
somatic_hotspot_vcf=$(locate_hotspot_vcf)
germline_hotspot_vcf=$(locate_germline_hotspot_vcf)
driver_gene_panel=$(locate_driver_gene_panel_tsv)

db_args=""
if [[ ! -z "${credentials}" ]]; then
    db_user=$(awk '/^user/ {print $2}' ${credentials})
    db_pass=$(awk '/^pass/ {print $2}' ${credentials})
    db_url=$(awk '/^url/ {print $2}' ${credentials})
    db_args="-db_enabled -db_user ${db_user} -db_pass ${db_pass} -db_url ${db_url}"
fi

echo "[INFO] Running purple for ${tumor_sample}"

java -Dorg.jooq.no-logo=true -Xmx16G -Xms4G \
    -jar ${purple_jar} \
    -somatic_vcf ${somatic_vcf} \
    -structural_vcf ${structural_vcf} \
    -circos ${base_path}/tools/circos_v0.69.6/bin/circos \
    -reference ${reference_sample} \
    -tumor ${tumor_sample} \
    -amber ${amber_dir} \
    -cobalt ${run_dir}/cobalt \
    -ref_genome ${ref_genome} \
    -output_dir ${purple_output_dir} \
    -gc_profile ${gc_profile} \
    -sv_recovery_vcf ${sv_recovery_vcf} \
    -driver_catalog \
    -somatic_hotspots ${somatic_hotspot_vcf} \
    -germline_hotspots ${germline_hotspot_vcf} \
    -driver_gene_panel ${driver_gene_panel} \
    ${db_args} \
    "$@"