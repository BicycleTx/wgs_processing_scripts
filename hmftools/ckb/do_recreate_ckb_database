#!/usr/bin/env bash

source message_functions || exit 1
source locate_files || exit 1
source database_functions || exit 1

ckb_db=$1 && shift

# Resources
ckb_database_sql=/data/resources/custom/ckb/generate_ckb_db.sql

# Database details
credentials=$(prod_writer_sql_credentials)

db_user=$(extract_database_user "${credentials}")
db_pass=$(extract_database_password "${credentials}")
db_host=$(extract_database_host "${credentials}")

info "Rebuilding CKB db '${ckb_db}' on '${db_host} using ${ckb_database_sql}"

mysql ${ckb_db} --host="${db_host}" --user="${db_user}" --password="${db_pass}" < ${ckb_database_sql}
