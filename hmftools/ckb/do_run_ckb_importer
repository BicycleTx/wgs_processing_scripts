#!/usr/bin/env bash

ckb_jar=$1 && shift
database_name=$1 && shift
ckb_dir=$1 && shift

# Database details
credentials=$(pull_prod_writer_sql_credentials)

db_user=$(extract_credentials_value "${credentials}" user)
db_pass=$(extract_credentials_value "${credentials}" password)
db_host=$(extract_credentials_value "${credentials}" host)
db_port=$(extract_credentials_value "${credentials}" port)
database_dependencies=$(extract_credentials_value "${credentials}" database_dependencies)
db_url=$( echo "mysql://${db_host}:${db_port}/${database_name}?serverTimezone=CET${database_dependencies}")

java -Xms2G -Xmx10G -Dorg.jooq.no-logo=true -jar ${ckb_jar} \
    -cbk_dir ${ckb_dir} \
    -db_user ${db_user} -db_pass ${db_pass} -db_url ${db_url} \
    -log_debug \
    "$@"