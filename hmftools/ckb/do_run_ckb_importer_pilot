#!/usr/bin/env bash

source database_functions || exit 1

ckb_jar=$1 && shift
database_name=$1 && shift
ckb_dir=$1 && shift

# Database details
credentials=$(prod_writer_sql_credentials)

db_user=$(extract_database_user "${credentials}")
db_pass=$(extract_database_password "${credentials}")
db_url=$(construct_database_url "${credentials}" "${database_name}")

java11 -Xms2G -Xmx10G -Dorg.jooq.no-logo=true -Dorg.jooq.no-tips=true -jar ${ckb_jar} \
    -cbk_dir ${ckb_dir} \
    -db_user ${db_user} -db_pass ${db_pass} -db_url ${db_url} \
    -log_debug \
    "$@"