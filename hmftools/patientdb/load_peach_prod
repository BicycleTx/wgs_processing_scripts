#!/usr/bin/env bash

source locate_files || exit 1
source metadata_functions || exit 1
source message_functions || exit 1

run_dir=$1 && shift

if [[ -z "${run_dir}" ]]; then
    error "No run dir passed. Exiting"
fi

sample=$(load_tumor_sample_from_metadata ${run_dir})
peach_prod_calls_tsv=$(locate_peach_prod_calls ${run_dir})
peach_prod_genotype_tsv=$(locate_peach_prod_genotype ${run_dir})

credentials=$(locate_prod_database_credentials)
patient_db_jar=$(locate_prod_patient_db)

do_load_peach_data ${sample} ${peach_prod_calls_tsv} ${peach_prod_genotype_tsv} ${credentials} ${patient_db_jar} "$@"