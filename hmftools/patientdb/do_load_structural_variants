#!/usr/bin/env bash

sample=$1 && shift
structural_vcf=$1 && shift
credentials=$1 && shift
patient_db_jar=$1 && shift

# Database details
db_user=$(awk '/^user/ {print $2}' ${credentials})
db_pass=$(awk '/^pass/ {print $2}' ${credentials})
db_url=$(awk '/^url/ {print $2}' ${credentials})

java -Dorg.jooq.no-logo=true -Xmx8G -Xms4G -cp ${patient_db_jar} com.hartwig.hmftools.patientdb.LoadStructuralVariants \
    -tumor ${sample} \
    -structural_vcf ${structural_vcf} \
    -db_user ${db_user} -db_pass ${db_pass} -db_url ${db_url} \
    "$@"
