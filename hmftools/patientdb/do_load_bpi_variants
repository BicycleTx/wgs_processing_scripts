#!/bin/bash
run_dir=$1 && shift
credentials=$1 && shift
patient_db_jar=$1 && shift

# JOBA: Database details
db_user=$(awk '/^user/ {print $2}' ${credentials})
db_pass=$(awk '/^pass/ {print $2}' ${credentials})
db_url=$(awk '/^url/ {print $2}' ${credentials})

sample=$(ls ${run_dir} | grep -E '^(CPCT|DRUP)[0-9]{8}[^R]')
bpi_vcf=$(ls ${run_dir}/structuralVariants/bpi/*/*_somaticSV_bpi.vcf)

echo "Loading bpi data for sample: ${sample}"

java -Dorg.jooq.no-logo=true -cp ${patient_db_jar} com.hartwig.hmftools.patientdb.LoadStructuralVariants \
    -sample ${sample} \
    -vcf_file ${bpi_vcf} \
    -db_user ${db_user} -db_pass ${db_pass} -db_url ${db_url} \
    $@
