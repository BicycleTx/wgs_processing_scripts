#!/usr/bin/env bash

sample=$1 && shift
ref_flagstats_file=$1 && shift
tumor_flagstats_file=$1 && shift
credentials=$1 && shift
patient_db_jar=$1 && shift

# Database details
db_user=$(awk '/^user/ {print $2}' ${credentials})
db_pass=$(awk '/^pass/ {print $2}' ${credentials})
db_url=$(awk '/^url/ {print $2}' ${credentials})

echo "[INFO] Loading flagstats data for ${sample}"

java -Dorg.jooq.no-logo=true -cp ${patient_db_jar} com.hartwig.hmftools.patientdb.LoadFlagstatsData \
    -sample ${sample} \
    -ref_flagstats_file ${ref_flagstats_file} \
    -tumor_flagstats_file ${tumor_flagstats_file} \
    -db_user ${db_user} -db_pass ${db_pass} -db_url ${db_url} \
    "$@"