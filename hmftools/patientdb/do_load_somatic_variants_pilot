#!/bin/bash
source load_metadata

prefix=`dirname $(readlink $0 || echo $0)`
run_dir=$1 && shift

credentials=/data/common/tools/patient-db_pilot/credentials
patient_db_jar=/data/common/tools/purple_pilot/purple.jar

# Files
somatic_vcf=$(ls ${run_dir}/somaticVariants/*/*post_processed.v2.vcf.gz)
if [ $? -ne 0 ]
then
    echo "Unable to locate post processed somatic variants. Exiting."
    exit 1
fi

sample=$(load_tumor_sample_from_metadata ${run_dir})
${prefix}/do_load_somatic_variants ${run_dir} ${credentials} ${patient_db_jar} ${somatic_vcf} -sample ${sample}