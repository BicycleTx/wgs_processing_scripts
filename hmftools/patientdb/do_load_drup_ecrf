#!/bin/bash
patient_db_dir=/data/common/tools/patient-db_v1.9

ecrf_file=$1

credentials=/data/common/dbs/mysql_credentials/prod
db_user=$(awk '/^user/ {print $2}' ${credentials})
db_pass=$(awk '/^pass/ {print $2}' ${credentials})
db_url=mysql://localhost:3306/hmfpatients?serverTimezone=CET

exec java -Dorg.jooq.no-logo=true -cp "$patient_db_dir"/patient-db.jar com.hartwig.hmftools.patientdb.LoadDrupEcrfData \
    -runs_dir /data/cpct/runs/ \
    -ecrf ${ecrf_file} \
    -db_user ${db_user} \
    -db_pass ${db_pass} \
    -db_url ${db_url}