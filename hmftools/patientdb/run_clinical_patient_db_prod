#!/bin/bash
patient_db_dir=/data/common/tools/patient-db_v2.1
runs_dir=/data/cpct/runs

credentials=/data/common/dbs/mysql_credentials/prod
db_user=$(awk '/^user/ {print $2}' ${credentials})
db_pass=$(awk '/^pass/ {print $2}' ${credentials})
db_url=mysql://localhost:3306/hmfpatients?serverTimezone=CET

# KODU - Force UTF-8 to deal with non-standard characters, see DEV-275
exec java -Xmx4G -Xms2G -Dfile.encoding=UTF-8 \
    -jar "$patient_db_dir"/patient-db.jar \
    -runs_dir ${runs_dir} \
    -ecrf /data/ecrf/cpct_ecrf.xml \
    -form_status_csv /data/ecrf/cpct_form_status.csv \
    -db_user ${db_user} \
    -db_pass ${db_pass} \
    -db_url ${db_url} \
    -lims_json /data/lims/lims.json \
    -pre_lims_arrival_dates_csv /data/lims/pre_lims_arrival_dates.csv \
    -csv_out_dir /data/common/dbs/ecrf_dumps \
    -cancer_types_symlink cancer_types \
    "$@"