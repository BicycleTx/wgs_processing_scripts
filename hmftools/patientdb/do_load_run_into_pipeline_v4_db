#!/bin/bash

run_dir=$1 && shift

prefix=`dirname $(readlink $0 || echo $0)`

credentials=/data/common/dbs/mysql_credentials/pipeline_v4
patient_db_jar=/data/common/tools/purple_v2.14/purple.jar

somatic_vcf=$(ls ${run_dir}/somaticVariants/*/*post_processed_v2.2.vcf.gz)
if [ $? -ne 0 ]
then
    echo "Unable to locate post processed somatic variants. Exiting."
    exit 1
fi

echo "[INFO] Loading purple data"
${prefix}/do_load_purple_data ${run_dir} ${credentials} ${patient_db_jar}

echo "[INFO] Loading metrics"
${prefix}/do_load_metrics_data ${run_dir} ${credentials} ${patient_db_jar}

echo "[INFO] Loading somatic variants"
${prefix}/do_load_somatic_variants ${run_dir} ${credentials} ${patient_db_jar} ${somatic_vcf}

sv_jar=/data/common/tools/variantannotator_v1.3/variant-annotator.jar

echo "[INFO] Loading sv variants"
${prefix}/../svloader/do_run_sv_loader ${run_dir} ${credentials} ${sv_jar}

