#!/usr/bin/env bash

source locate_files

run_dir=$1 && shift

vcf=$( locate_sage_germline_variants_pilot ${run_dir})
sample=$(echo $vcf | cut -c1-$((${#vcf}-23)))
reference=$(echo $vcf | cut -c1-12)R
rna=$(echo $vcf | cut -c1-12)RNA

credentials=/data/common//dbs/mysql_credentials/pilot
patient_db_jar=/data/common/tools/purple_pilot/purple.jar

# Database details
db_user=$(awk '/^user/ {print $2}' ${credentials})
db_pass=$(awk '/^pass/ {print $2}' ${credentials})
db_url=$(awk '/^url/ {print $2}' ${credentials})

# File Locations

echo "[INFO] Loading somatic variant data for ${sample}"

java -Dorg.jooq.no-logo=true -cp ${patient_db_jar} com.hartwig.hmftools.patientdb.LoadGermlineVariants \
   -sample ${sample} -reference ${reference} \
   -germline_vcf ${vcf} \
   -db_user ${db_user} -db_pass ${db_pass} -db_url ${db_url} \
   "$@"