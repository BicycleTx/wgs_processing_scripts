#!/usr/bin/env bash

sample=$1 && shift
credentials=$1 && shift
patient_db_jar=$1 && shift

# Database details
db_user=$(awk '/^user/ {print $2}' ${credentials})
db_pass=$(awk '/^pass/ {print $2}' ${credentials})
db_url=$(awk '/^url/ {print $2}' ${credentials})

echo "[INFO] Deleting data for ${sample}"

echo "[INFO] TODO: remove set from datastore"
echo "[INFO] TODO: run run_clinical_patient_db_prod"
echo "[INFO] Clinical data for sample: ${sample} is deleted from database"

java -Dorg.jooq.no-logo=true -cp ${patient_db_jar} com.hartwig.hmftools.patientdb.DeleteSampleFromDatabase \
    -sample ${sample} \
    -db_user ${db_user} -db_pass ${db_pass} -db_url ${db_url}
