#!/usr/bin/env bash

sample=$1 && shift
protect_evidence_tsv=$1 && shift
credentials=$1 && shift
patient_db_jar=$1 && shift

# Database details
db_user=$(awk '/^user/ {print $2}' ${credentials})
db_pass=$(awk '/^pass/ {print $2}' ${credentials})
db_url=$(awk '/^url/ {print $2}' ${credentials})

echo "[INFO] Loading PROTECT data for ${sample}"
echo ${protect_evidence_tsv}
echo ${credentials}
echo ${patient_db_jar}

java -Dorg.jooq.no-logo=true -cp ${patient_db_jar} com.hartwig.hmftools.patientdb.LoadProtectData \
    -sample ${sample} \
    -protect_evidence_tsv ${protect_evidence_tsv} \
    -db_user ${db_user} -db_pass ${db_pass} -db_url ${db_url} \
    "$@"
