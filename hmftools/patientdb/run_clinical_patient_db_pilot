#!/bin/bash
runs_dir=/data/cpct/runs
patient_db_jar=/data/common/tools/patient-db_pilot/patient-db.jar

credentials=/data/common/dbs/mysql_credentials/pilot
db_user=$(awk '/^user/ {print $2}' ${credentials})
db_pass=$(awk '/^pass/ {print $2}' ${credentials})
db_url=$(awk '/^url/ {print $2}' ${credentials})

exec java -Xmx4G -Xms2G -jar ${patient_db_jar} \
    -runs_dir ${runs_dir} \
    -ecrf /data/ecrf/cpct_ecrf.xml \
    -form_status_csv /data/ecrf/cpct_form_status.csv \
    -db_user ${db_user} \
    -db_pass ${db_pass} \
    -db_url ${db_url} \
    -lims_json /data/lims/lims.json \
    -pre_lims_arrival_dates_csv /data/lims/pre_lims_arrival_dates.csv \
    -csv_out_dir /data/common/dbs/ecrf_dumps_pilot \
    -cancer_types_symlink cancer_types \
    -portal_data_symlink portal_data \
    "$@"

exec java -Xmx4G -Xms2G -cp ${patient_db_jar} \
    com.hartwig.hmftools.patientdb.LoadMetricsData \
    -runs_dir ${runs_dir} \
    -db_user ${db_user} \
    -db_pass ${db_pass} \
    -db_url ${db_url}