#!/bin/bash

prefix=`dirname $(readlink $0 || echo $0)`
run_dir=$1 && shift

credentials=/data/common/tools/patient-db_pilot/credentials
patient_jar=/data/common/tools/patient-db_pilot/patient-db.jar

# Files
somatic_vcf=$(ls ${run_dir}/somaticVariants/*/*post_processed_strelka_filtered.vcf)
if [ $? -ne 0 ]
then
    echo "Unable to locate strelka somatic variants. Exiting."
    exit 1
fi

${prefix}/do_load_somatic_variants ${run_dir} ${credentials} ${patient_jar} ${somatic_vcf}