#!/usr/bin/env bash

source locate_files

run_dir=$1 && shift

echo "Files that must exist in every circumstance"
echo " SAGE Somatic VCF: $(locate_sage_somatics ${run_dir})"
echo " Purple Somatic VCF: $(locate_purple_somatics ${run_dir})"
echo " Purple Purity: $(locate_purple_purity ${run_dir})"
echo " Purple Gene Copy Numbers: $(locate_purple_gene_copynumbers ${run_dir})"
echo " Purple Circos Plot: $(locate_purple_circos_plot ${run_dir})"
echo " Purple Structural VCF: $(locate_purple_structural_variants ${run_dir})"
echo " GRIDSS Filtered Structural VCF: $(locate_gridss_structural_variants ${run_dir})"
echo " GRIDSS Recovery Candidates VCF: $(locate_gridss_recovery_candidates ${run_dir})"

echo ""
echo "Files that are expected to be generated by post-process on datastore"
echo " LINX Fusions: $(locate_linx_reported_fusions ${run_dir})"
echo " LINX Disruptions: $(locate_linx_disruptions ${run_dir})"
echo " Bachelor Germline Variants: $(locate_bachelor_germline_variants ${run_dir})"
echo " CHORD Prediction File: $(locate_chord_prediction_file ${run_dir})"

echo ""
echo "Files that are generated in pilot setting"
echo " Purple Pilot Somatic VCF: $(locate_purple_pilot_somatics ${run_dir})"
echo " Purple Pilot Purity: $(locate_purple_pilot_purity ${run_dir})"
echo " Purple Pilot Gene Copy Numbers: $(locate_purple_pilot_gene_copynumbers ${run_dir})"
echo " Purple Pilot Circos Plot: $(locate_purple_pilot_circos_plot ${run_dir})"
echo " Purple Pilot Structural VCF: $(locate_purple_pilot_structural_variants ${run_dir})"