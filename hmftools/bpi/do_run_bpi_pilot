#!/bin/bash
prefix=`dirname $(readlink $0 || echo $0)`
run_dir=$1 && shift

base_path="/data/common"
if [ -z "`hostname | grep datastore`" ]; then
    # KODU: common folder does not exist on crunches...
	base_path="/data"
fi

bpi_version=1.7
bpi_jar=${base_path}/tools/break-point-inspector_pilot/break-point-inspector.jar

# KODU: BPI generally assumes it runs on top of an already run BPI
bpi_output=${run_dir}/structuralVariants/bpi

${prefix}/do_run_bpi ${run_dir} ${bpi_jar} ${bpi_output} ${bpi_version}