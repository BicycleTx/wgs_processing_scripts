#!/usr/bin/env bash

run=$1

bachelor_dir=${run}/bachelor
if [ -e ${bachelor_dir}/bachelor_found_no_variants ]; then
    echo "[OK] No bachelor variants found for ${run}"
else
    germline_file=${bachelor_dir}/*_germline_variants.csv
    if [ -e ${germline_file} ]; then
        echo "[OK] Germline variants found for ${run}"
    else
        mpu=${bachelor_dir}/*1.mpu
        if [ -e ${mpu} ]; then
            echo "[WARN] Seems like variants got filtered for ${run}"
        else
            echo "[WARN] Seems like BAMs are on cold storage for ${run}"
        fi
    fi
fi