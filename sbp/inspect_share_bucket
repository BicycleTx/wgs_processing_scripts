#!/usr/bin/env bash

uploadFileName=$1

profile="download"
bucket="hmf_experiments"
subdir="share"
s3path="s3://${bucket}/${subdir}/"
yymmdd=$( date "+%y%m%d" )

if [[ -z $uploadFileName ]]; then
  uploadFileName="YOUR_FILE_IN_DATA_TMP"
fi

echo "---"
echo "[INFO] Reading ${s3path}:"
sbp s3 ls --human-readable --summarize ${s3path} --profile ${profile}

echo ""
echo "[INFO] Command to upload file:"
echo " nohup sbp s3 sync --follow-symlinks --dryrun /data/tmp/ ${s3path} --exclude \"*\" --include \"${uploadFileName}\" --profile ${profile} > ${HOME}/logs/${yymmdd}_upload_to_share_bucket.log &"
echo ""
echo "[INFO] Command to get external https link:"
echo " presign_url ${s3path}${uploadFileName}"
echo "---"
