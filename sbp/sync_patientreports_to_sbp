#!/bin/bash

LOCAL_PATH='/data/cpct'
REMOTE_PATH='s3://hmf_archive/patientreports'
AWS_PROFILE='hmf_archive'

sbp s3 sync "${LOCAL_PATH}/final_reports/" "${REMOTE_PATH}/final/" \
--profile ${AWS_PROFILE} \
--grants read=id=${HMF_DOWNLOAD_CANONICAL} readacl=id=${HMF_DOWNLOAD_CANONICAL}

sbp s3 sync "${LOCAL_PATH}/old_cpct_reports/" "${REMOTE_PATH}/old/" \
--profile ${AWS_PROFILE} \
--grants read=id=${HMF_DOWNLOAD_CANONICAL} readacl=id=${HMF_DOWNLOAD_CANONICAL}
