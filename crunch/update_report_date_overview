#!/usr/bin/env bash

YYMMDD=$(date '+%y%m%d')
task_id="updateReportingOverview"

src_dir="/data/lims"
nas_loc="/volume1/web/overviews/reporting"

## Sanity checks
if [[ ! -d "${src_dir}" ]]; then echo "[ERROR] INPUT DIR does not exist (${src_dir})" && exit 1; fi

## Action
echo "[INFO] START with ${task_id} ($YYMMDD)"
echo "[INFO]   Syncing from datastore to NAS intranet (to ${nas_loc})"
scp "/data/lims/reporting_db.tsv" "nas:${nas_loc}"
scp "/data/lims/reporting_db.tsv" "nas:${nas_loc}/reporting_db.txt"
echo "[INFO] DONE with ${task_id}"
