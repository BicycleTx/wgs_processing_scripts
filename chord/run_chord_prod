#!/bin/bash
source locate_files
source load_metadata

prefix=`dirname $(readlink $0 || echo $0)`
run_dir=$1 && shift

if [ ! -d ${run_dir} ]; then
    echo "[ERROR] ${run_dir} does not exist!"
    exit 1
fi

sample=$(load_tumor_sample_from_metadata ${run_dir})

chord_dir=/data/common/tools/chord_v1.1
working_dir="${run_dir}/chord"
mkdir -p ${working_dir}

somatic_vcf=$(locate_somatics ${run_dir})
# TODO (KODU): Can't take the purple SV here because of screwed up contig headers which crash CHORD. See mail Jon 10-1-2019
structural_vcf=$(locate_gridss_structural_variants ${run_dir})

echo "[INFO] CHORD is using somatic vcf: ${somatic_vcf}"
echo "[INFO] CHORD is using structural vcf: ${structural_vcf}"

echo "[INFO] script run_chord_prod"
echo "[INFO] chord_dir: ${chord_dir}"
echo "[INFO] working_dir: ${working_dir}"
echo "[INFO] sample: ${sample}"
echo "[INFO] somatic vcf: ${somatic_vcf}"
echo "[INFO] structural vcf: ${structural_vcf}"

# KODU: Below creates "ID_sample_mut_signatures.txt in the working_dir that is passed.
${prefix}/extractHRDsample.R ${chord_dir} ${working_dir} ${sample} ${somatic_vcf} ${structural_vcf}

sample_mut_signatures="${sample}_sample_mut_signatures.txt"
${prefix}/predictHRDsample.R ${chord_dir} ${working_dir} ${sample} ${sample_mut_signatures}